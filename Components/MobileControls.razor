@using Microsoft.AspNetCore.Components.Web
@using Snake.Game

<div class="mobile-controls">
    <div class="control-row">
        <button class="control-btn up-btn" @onclick="async () => await OnDirectionChange.InvokeAsync(Direction.Up)">
            <span class="arrow">↑</span>
        </button>
    </div>
    <div class="control-row">
        <button class="control-btn left-btn" @onclick="async () => await OnDirectionChange.InvokeAsync(Direction.Left)">
            <span class="arrow">←</span>
        </button>
        <button class="control-btn down-btn" @onclick="async () => await OnDirectionChange.InvokeAsync(Direction.Down)">
            <span class="arrow">↓</span>
        </button>
        <button class="control-btn right-btn" @onclick="async () => await OnDirectionChange.InvokeAsync(Direction.Right)">
            <span class="arrow">→</span>
        </button>
    </div>
</div>

@code {
    [Parameter]
    public EventCallback<Direction> OnDirectionChange { get; set; }
} 