{
  "version": 2,
  "public": true,
  "cleanUrls": true,
  "routes": [
    {
      "src": "/_framework/wasm/.*",
      "headers": {
        "content-type": "application/wasm"
      }
    },
    {
      "src": "/_framework/.*\\.js",
      "headers": {
        "content-type": "application/javascript"
      }
    },
    {
      "src": "/_framework/.*",
      "headers": {
        "content-type": "application/octet-stream"
      }
    },
    {
      "src": "/.*",
      "headers": {
        "Cache-Control": "no-cache"
      }
    }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "outputDirectory": "wwwroot"
} 